{% for post in page
    .posts
    .toArray() %}

    {% if loop.index == 1 %}
        {{ partial('partial/post', {post: post}) }}
    {% else %}
        {% if loop.index == 2 %}
            <hr class="border-solid border-gray-500 my-5 block"/>
            <h2 class="text-xl font-bold">Recent Episodes</h2>
        {% endif %}
        <div class="prose">
            <article class="article post archive-post" itemscope itemtype="http://schema.org/Article">
                <a class="archive-post-link" href="{{ url_for(post.path) }}">
                    <strong class="archive-post-title" itemprop="name">{{ post.title }}</strong>
                    (<span class="text-sm">{{ time_tag(post.date) }}</span>)
                </a>: {{ post.summary}}
            </article>
        </div>
    {% endif %}

{% endfor %}

{{ page.content }}